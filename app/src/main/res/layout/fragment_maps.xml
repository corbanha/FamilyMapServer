<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fragmentxmlns="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_gravity="center"
        tools:context=".ui.MapsFragment" />

    <LinearLayout
        android:id="@+id/map_lower_event_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/event_gender_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            tools:srcCompat="@drawable/android" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_details_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:text="Click a marker"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/event_details_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:text="to see event details"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/event_details_line_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:textSize="22sp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
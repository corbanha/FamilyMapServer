<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Life Story Lines"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/settings_show_life_story_lines_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <Spinner
            android:id="@+id/settings_show_life_story_lines_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/settings_show_life_story_lines_switch"
            android:entries="@array/line_colors"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Family Tree Lines"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/settings_show_fam_tree_lines_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <Spinner
            android:id="@+id/settings_show_fam_tree_lines_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/settings_show_fam_tree_lines_switch"
            android:entries="@array/line_colors"
            android:padding="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Spouse Lines"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/settings_show_spouse_lines_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <Spinner
            android:id="@+id/settings_show_spouse_lines_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/settings_show_spouse_lines_switch"
            android:entries="@array/line_colors"
            android:padding="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Background Map Type"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/settings_map_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:entries="@array/map_type"
            android:padding="5dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/settings_resync_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Resync Data"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/settings_logout_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>